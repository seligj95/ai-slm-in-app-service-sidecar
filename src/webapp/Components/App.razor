    <script src="_content/Blazor.Bootstrap/blazor.bootstrap.js"></script>    <script>
        // Function to update the cart badge count
        window.updateCartBadge = function (count) {
            // Use the specific ID to directly target the cart badge
            const badge = document.getElementById('cartBadge');
            
            if (badge) {
                // Update the badge content and visibility
                if (count > 0) {
                    badge.textContent = count;
                    badge.style.display = 'inline-block';
                } else {
                    badge.style.display = 'none';
                }
                
                console.log("Cart badge updated to: " + count);
            } else {
                console.error("Cart badge element not found");
            }
        }
    </script>
